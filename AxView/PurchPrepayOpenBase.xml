				<Name>prepayAvailable</Name>
				<Source><![CDATA[
    /// <summary>
    /// Generates the SQL string that creates the column which calculates the prepayment available to invoice for a given prepayment.
    /// If the Purchase order is fully invoiced, then that value needs to be 0, otherwise, return the value contained in the <c>PurchPrepayTable</c>
    /// </summary>
    /// <returns>SQL column definition string used for a column on the view.</returns>
    public static str prepayAvailable()
    {
        /*
        Actual SQL generated by the code below for reference

        CASE
            WHEN (T1.PurchStatus = 3) THEN 0
            ELSE T2.PrepayAvailable
        END

        */

        const str t1PrefixWithReplacement = 'T1.%1';
        const str t2PrefixWithReplacement = 'T2.%1';

        str purchStatusIsInvoiced = SysComputedColumn::equalExpression(strFmt(t1PrefixWithReplacement, fieldStr(PurchTable, PurchStatus)), '3');
        str prepayAvailableString = strFmt(t2PrefixWithReplacement, fieldStr(PurchPrepayTable, PrepayAvailable));

        str caseStatement = SysComputedColumn::if(purchStatusIsInvoiced, '0', prepayAvailableString);

        return caseStatement;
    }

]]></Source>
			</Method>
		</Methods>
	</SourceCode>
