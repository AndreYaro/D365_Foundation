<?xml version="1.0" encoding="utf-8" ?>
<PageTemplateSolutionComponent>
  <Id></Id>
  <DisplayName></DisplayName>
  <Description></Description>
  <PageTypeId></PageTypeId>
  <PreviewImageUrl></PreviewImageUrl>
  <Forms xmlns="http://schemas.microsoft.com/Dynamics/OnlineServices/WebService/Sites/V1">
    <Form>
      <ViewId>View</ViewId>
      <RootControl>
        <Id>PageRoot</Id>
        <CssClassId>Page</CssClassId>
        <ContainerType>Generic</ContainerType>
        <Layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="GridLayout"/>
        <ChildControls>
          <!-- Header control -->
          <Control xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="ContainerControl">
            <Id>Header</Id>
            <CssClassId>PageHeader</CssClassId>
            <Location xsi:type="GridLocation">
              <Row>0</Row>
              <Column>0</Column>
              <RowSpan>1</RowSpan>
              <ColumnSpan>2</ColumnSpan>
            </Location>
            <ContainerType>Generic</ContainerType>
            <Layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="StackLayout"/>
          </Control>

          <!-- Content column control -->
          <Control xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="ContainerControl">
            <Id>FormRoot</Id>
            <CssClassId>PublishColumn TitleOnTop</CssClassId>
            <Location xsi:type="GridLocation">
              <Row>1</Row>
              <Column>0</Column>
              <RowSpan>1</RowSpan>
              <ColumnSpan>2</ColumnSpan>
            </Location>
            <ContainerType>Generic</ContainerType>
            <Layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="StackLayout"/>
            <ChildControls>
              <Control xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="ContainerControl">
                <Id>FormFields</Id>
                <CssClassId>TitleOnLeft</CssClassId>
                - <Location xsi:type="StackLocation">
                  <StackOrder>1</StackOrder>
                </Location>
                <ContainerType>FormFieldList</ContainerType>
                <Layout xsi:type="StackLayout" />
              </Control>
            </ChildControls>
          </Control>

          <!-- Footer control -->
          <Control xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="ContainerControl">
            <Id>Footer</Id>
            <CssClassId>PageFooter</CssClassId>
            <Location xsi:type="GridLocation">
              <Row>2</Row>
              <Column>0</Column>
              <RowSpan>1</RowSpan>
              <ColumnSpan>2</ColumnSpan>
            </Location>
            <ContainerType>Generic</ContainerType>
            <Layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="StackLayout"/>
          </Control>

        </ChildControls>
      </RootControl>
    </Form>
  </Forms>
</PageTemplateSolutionComponent>
