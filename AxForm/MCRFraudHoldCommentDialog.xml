				<Source><![CDATA[
    public void close()
    {
        DocuRef docuRef;

        if (!element.closedOk())
        {
            //Indicates the order should not be put on hold.
            element.args().parmEnum(0);
        }
        else
        {
            //Indicates the form was closed using the ok button,
            //and the order should be put on hold.
            element.args().parmEnum(1);

            //Save the comment entered in the args().parm.
            element.args().parm(DocuRef_Notes.text());

            ttsBegin;
            docuRef.Notes = DocuRef_Notes.text();
            docuRef.TypeId = MCROrderParameters::find().MCRFraudCommentTypeId;
            docuRef.RefRecId = element.args().record().RecId;
            docuRef.RefTableId = element.args().record().TableId;
            docuRef.RefCompanyId = curExt();
            if (docuRef.validateWrite())
            {
                docuRef.insert();
            }
            else
            {
                throw error("@SYS104318");
            }

            ttsCommit;
        }

        super();
    }

]]></Source>
