            totalAmounts = SalesTotals::getRetailTotalsAllAccounts(element.args().record());

            totalBalance.realValue(conPeek(totalAmounts, 1));

            prepaymentPaid.realValue(conPeek(totalAmounts, 2));
        }
        else
        {
            throw error("@SYS22996");
