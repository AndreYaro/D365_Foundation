				<Name>performCreate</Name>
				<Source><![CDATA[
    /// <summary>
    /// Create a new hierarchy and then open it in the designer.
    /// </summary>
    void performCreate()
    {
        Name                                name;
        TaxReportHrchyStructureDesign_IN    design;
        TaxReportHrchyStructDesignType_IN   type;

        type = str2enum(type, hierarchyControl.valueStr());
        name = nameControl.text();

        design = TaxReportHrchyStructDesignFactory_IN::getStructureDesign(type, name);

        TaxReportHierarchyHelper_IN::initReportCodeHierarchy(design);
    }

]]></Source>
			</Method>
			<Method>
				<Name>validateInputs</Name>
				<Source><![CDATA[
    /// <summary>
    /// Validate user inputs for the new hierarchy.
    /// 1) Name must be filled in
    /// 2) Name must have a value that is not occupied by any existing hierarchies (by Table constraint)
    /// </summary>
    /// <returns>
    /// True if user inputs are valid for a new hierarchy, else false.
    /// </returns>
    boolean validateInputs()
    {
        boolean isValid = true;
        Name    name;

        name = nameControl.text();

        if (name == '')
        {
            info(strFmt("@SYS343443", new DictType(extendedTypeNum(Name)).label()));
            isValid = false;
        }

        return isValid;
    }

]]></Source>
