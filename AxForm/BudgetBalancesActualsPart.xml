            {
                Args args = new Args();

                args.record(budgetTransactionLine);
                args.caller(element.args().caller());

                FormRun formRun = new MenuFunction(menuItemDisplayStr(BudgetBalancesActualsByPeriods), MenuItemType::Display).create(args);

                formRun.run();
                formRun.wait();
            }
        }

